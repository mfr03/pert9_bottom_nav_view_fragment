<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Pert8_bottom_nav_view_fragment" parent="Theme.Material3.DayNight">
        <item name="android:statusBarColor">#525BFF</item>
    </style>
    <style name="FragmentTitle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomButton" parent="Widget.Material3.Button">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:backgroundTint">#525BFF</item>
    </style>

    <style name="customActionBarTitle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="CustomActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="background">@color/torquiseBlue</item>
        <item name="titleTextStyle">@style/customActionBarTitle</item>
    </style>

    <style name="Theme.Pert8_bottom_nav_view_fragment" parent="Base.Theme.Pert8_bottom_nav_view_fragment">
        <item name="actionBarStyle">@style/CustomActionBar</item>
        <item name="title">TravelApp</item>
    </style>
</resources>